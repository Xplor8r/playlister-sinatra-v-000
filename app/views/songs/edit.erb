<h1>Edit Song</h1>

<form method="POST" action="/songs/<%= @song.slug %>">
  <input value="PATCH" type="hidden" name="_method">

    <h2><label> Song Name </label><input type="text" name="song[name]" id="name" value="<%= @song.name %>"></h2>

    <h2><label> Artist Name </label><input type="text" name="Artist Name" value="<%= @song.artist.name %>" id="artist_name"></h2>

    <h2><label> Genres </label></h2>
      <p><% Genre.all.each do |genre| %>
        <label><%= genre.name %></label>
        <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
        <% end %>
      </p>
    <input type="submit" value="Save">
</form>
